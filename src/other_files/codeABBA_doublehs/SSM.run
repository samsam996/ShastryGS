#!/bin/bash
#SBATCH -q serial
#SBATCH -e ./job-%N-%j.error
#SBATCH -o ./job-%N-%j.out
#SBATCH --nodes 1
#SBATCH --ntasks 1
#SBATCH --cpus-per-task 18
#SBATCH --time 2-23:10:00
#SBATCH --mem 60G

export SCR=/scratch/snyckees/
export DAT=/home/snyckees/FE1x2ctmD6
export RES=/home/snyckees/RESULTS/$SLURM_JOB_ID/

echo "***** START OF JOB ***** "

cd $SCR
mkdir $SLURM_JOB_ID
cd ./$SLURM_JOB_ID

cp -a $DAT/. .

module purge
module load gcc julia/1.8.3

echo STARTING AT `date`

julia -t 18 main_fullupdate.jl

echo FINISHED at `date`

mkdir -p $RES
cp -r $SCR/$SLURM_JOB_ID/Results $RES

echo " ***** END OF JOB ***** "

